@model List<Hat>

<div class="text-center mb-3">
    <h1>Lagerförda hattar</h1>
</div>

<div class="d-flex flex-wrap justify-content-center gap-3 px-3">

    @foreach (Hat hats in Model)
    {
        
            <div class="text-center shadow border rounded p-3" style="width: 250px;">
                <img src="@hats.Picture" alt="Hattbild" style="width: 200px; height: 200px; border-radius: 50%; object-fit: cover;" />
                <div class="mt-2">
                    <label><span class="fw-bold">Namn:</span> @hats.Name</label><br />
                    <label><span class="fw-bold">Pris:</span> @hats.Price kr</label><br />
                  
                </div>
                <form asp-controller="Hat" asp-action="HatInfo" method="get">
                <input type="hidden" name="HatID" value="@hats.HID" />
                    <button type="submit" class="btn btn-outline-info">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                    </svg>
                    </button>
                </form>
            </div>
        
    }

</div>

<div class="text-center mt-4">
    <a asp-controller="Hat" asp-action="AddStandardHat">
        <button class="btn btn-primary">+ Skapa ny hatt</button>
    </a>
    
</div>
